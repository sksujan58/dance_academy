extends base.pug

block scripts
    script(src='/static/script.js')
block style
    style
        include ../static/style.css 
        include ../static/styleContact.css
block content
    div.main_contact
        h1 Contact Us
        form(action="/contact", method="post" class="main_form")
            input(type="text" class="myInput" name="name" placeholder="Name here")
            input(type="text" class="myInput" name="age" placeholder="Age here")
            input(type="email" class="myInput" name="email" placeholder="email here")
            input(type="text" class="myInput" name="phone" placeholder="Phone no. here")
            button(type="submit" class="btncontact" ) Submit
